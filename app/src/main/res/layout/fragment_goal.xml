<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_gain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/card_maintain"
        app:layout_constraintEnd_toEndOf="@+id/card_maintain"
        app:layout_constraintStart_toStartOf="@+id/card_maintain">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/image_gain"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/gain_weight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_gain"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_gain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight Gain"
                    app:layout_constraintStart_toEndOf="@+id/image_gain"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_desc_gain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Desc GainGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGG"
                    app:layout_constraintStart_toStartOf="@+id/tv_gain"
                    app:layout_constraintTop_toBottomOf="@+id/tv_gain" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_maintain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_next_goal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/image_maintain"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/calories_manage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_maintain"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_maintain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight Maintain"
                    app:layout_constraintStart_toEndOf="@+id/image_maintain"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_desc_maintain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Desc Maintainnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnnn"
                    app:layout_constraintStart_toStartOf="@+id/tv_maintain"
                    app:layout_constraintTop_toBottomOf="@+id/tv_maintain" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_loss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="@id/card_maintain"
        app:layout_constraintStart_toStartOf="@id/card_maintain"
        app:layout_constraintTop_toBottomOf="@+id/card_maintain">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/image_loss"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/weight_loss"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/image_loss"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_loss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight Loss"
                    app:layout_constraintStart_toEndOf="@+id/image_loss"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_desc_loss"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Desc Losssssssssssssssssssssssssssssssssssssssssssssssss"
                    app:layout_constraintStart_toStartOf="@+id/tv_loss"
                    app:layout_constraintTop_toBottomOf="@+id/tv_loss" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/btn_next_goal"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/baseline_arrow_circle_right_24"
        android:contentDescription="Button Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_have_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:text="Already have an account?"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_move_to_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_next_goal" />

    <TextView
        android:id="@+id/tv_move_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:fontFamily="@font/medium"
        android:text="Sign In"
        android:textColor="@color/primary_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_have_account"
        app:layout_constraintTop_toBottomOf="@+id/btn_next_goal" />

</androidx.constraintlayout.widget.ConstraintLayout>