<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="#FFE6DF"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/bold"
                android:text="Goal"
                android:textColor="@color/black_3"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_goal_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="19dp"
                android:fontFamily="@font/medium"
                android:textColor="@color/black_2"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView23"
                app:layout_constraintTop_toBottomOf="@+id/textView23" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/planning" />

            <TextView
                android:id="@+id/tv_target_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/semi_bold"
                android:textColor="@color/black_3"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_goal_home" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_home"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/danny"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/semi_bold"
        android:textColor="@color/black_4"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iv_home"
        app:layout_constraintTop_toTopOf="@+id/iv_home" />

    <TextView
        android:id="@+id/tv_tb_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:textColor="@color/black_2"
        app:layout_constraintStart_toStartOf="@+id/tv_name_home"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_home" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:cpb_background_progressbar_color="#EDEEEF"
        app:cpb_background_progressbar_color_direction="top_to_bottom"
        app:cpb_background_progressbar_width="25dp"
        app:cpb_progressbar_color="#53D290"
        app:cpb_progressbar_width="10dp"
        app:cpb_round_border="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29" />

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/eatProgress"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:cpb_background_progressbar_color="#EDEEEF"
        app:cpb_background_progressbar_color_direction="top_to_bottom"
        app:cpb_background_progressbar_width="10dp"
        app:cpb_progressbar_color="#72C0E3"
        app:cpb_progressbar_width="5dp"
        app:cpb_round_border="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />


    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/burnProgress"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        app:cpb_background_progressbar_color="#EDEEEF"
        app:cpb_background_progressbar_color_direction="top_to_bottom"
        app:cpb_background_progressbar_width="10dp"
        app:cpb_progressbar_color="#FE646F"
        app:cpb_progressbar_width="5dp"
        app:cpb_round_border="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <TextView
        android:id="@+id/tv_total_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:textColor="@color/black_3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/circularProgressBar"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar" />

    <TextView
        android:id="@+id/tv_calories_target_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/medium"
        android:textColor="@color/black_4"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/circularProgressBar"
        app:layout_constraintStart_toStartOf="@+id/circularProgressBar"
        app:layout_constraintTop_toBottomOf="@+id/circularProgressBar" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/medium"
        android:text="Eaten"
        android:textColor="@color/black_3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/eatProgress"
        app:layout_constraintStart_toStartOf="@+id/eatProgress"
        app:layout_constraintTop_toBottomOf="@+id/eatProgress" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/medium"
        android:text="Burn"
        android:textColor="@color/black_3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/burnProgress"
        app:layout_constraintStart_toStartOf="@+id/burnProgress"
        app:layout_constraintTop_toBottomOf="@+id/burnProgress" />

    <TextView
        android:id="@+id/tv_food_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:textColor="@color/black_3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/eatProgress"
        app:layout_constraintEnd_toEndOf="@+id/eatProgress"
        app:layout_constraintStart_toStartOf="@+id/eatProgress"
        app:layout_constraintTop_toTopOf="@+id/eatProgress" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@+id/eatProgress"
        app:layout_constraintStart_toStartOf="@+id/eatProgress"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
        app:srcCompat="@drawable/restaurant" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="@+id/burnProgress"
        app:layout_constraintStart_toStartOf="@+id/burnProgress"
        app:layout_constraintTop_toTopOf="@+id/circularProgressBar"
        app:srcCompat="@drawable/fire" />

    <TextView
        android:id="@+id/tv_exercise_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:textColor="@color/black_3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/burnProgress"
        app:layout_constraintEnd_toEndOf="@+id/burnProgress"
        app:layout_constraintStart_toStartOf="@+id/burnProgress"
        app:layout_constraintTop_toBottomOf="@+id/imageView12" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bold"
        android:text="My Plan"
        android:textColor="@color/black_4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_home" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/bold"
        android:text="Statistic"
        android:textColor="@color/black_4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ProgressBar
        android:id="@+id/pb_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

